<% if user_signed_in? %>
  <% if place.favorite_by?(current_user) %>
    <%= link_to place_favorite_path(place), method: :delete do %>
      <i class="far fa-thumbs-up fav-on-btn"></i>
    <% end %>
  <% else %>
    <%= link_to place_favorites_path(place), method: :post do %>
      <i class="far fa-thumbs-up fav-off-btn"></i>
    <% end %>
  <% end %>
<% end %>