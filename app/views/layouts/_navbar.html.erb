<header>
  <nav class="navbar navbar-expand-sm navbar-light bg-white fixed-top border-bottom">
    <% if user_signed_in? %>
      <a class="navbar-brand" href="/places/search">EKIDERU</a>
    <% else %>
      <a class="navbar-brand" href="/">EKIDERU</a>
    <% end %>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item"><%= link_to "検索", search_places_path, class: "nav-link border-left px-3" %></li>
          <li class="nav-item"><%= link_to "戻る", :back, class: "nav-link pl-2 pr-3" %></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle border-left pl-3" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to current_user.name, user_path(current_user), class: "dropdown-item"%>
              <div class="dropdown-divider"></div>
              <%= link_to "アカウント設定", edit_user_registration_path, class: "dropdown-item"%>
              <%= link_to "ログアウト", destroy_user_session_path, data: { confirm: "本当にログアウトしますか?" }, method: :delete, class: "dropdown-item"%>
            </div>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link border-left px-3" %></li>
          <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
