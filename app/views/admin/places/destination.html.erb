<div class="container">
  <div class="admin-table-wrapper">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>場所名</th>
          <th>読み仮名</th>
          <th>出口</th>
        </tr>
      </thead>
      <tbody>
        <% @places.each do |place| %>
          <tr onclick='window.location="<%= "/admin/places/" + place.id.to_s + "/edit" %>"' role="link">
            <%= link_to edit_admin_place_path(place) do %>
              <td><%= place.id %></td>
              <td><%= place.name %></td>
              <td><%= place.yomigana %></td>
              <% place.connected_exit.each do |exit| %>
                <td><%= exit.number %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>